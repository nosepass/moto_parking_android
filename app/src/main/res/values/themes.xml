<resources>

    <style name="AppThemeBase" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Change nav drawer item highlight -->
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_material_style</item>
        <!-- appcompat defaults to white on dark, change the nav drawer item text color to dark on white -->
        <item name="android:textAppearanceListItemSmall">@style/TextAppearance.AppCompat.Subhead.Inverse</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="Widget.Design.Snackbar" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
